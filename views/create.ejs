<%- include("partials/header.ejs") %>
<div class="controller">
    <div class="container">
        <% if(locals.postId){ %>
            <form action="/update" method="post" enctype="multipart/form-data">
                <div class="thepost">
                    <div class="thepost-left">
                        <input type="text" name="title" placeholder="Enter your title here" value="<%= posts[postId].title %>" required id="post-title">
                        <hr class="thepost-seperator">
                        <textarea type="text" name="content" rows="5" placeholder="Type in your content here" value="" required id="post-content"><%= posts[postId].content %></textarea>
                    </div>
                    <label for="image" class="image-label">Fotoğrafı değiştirmek istiyorsanız tıklayın, aynı kalmasını istiyorsanız boş bırakın.</label>
                    <input type="file" name="image" class="image-input" accept=".png, .jpg, .jpeg" id="image">
                    <input type="text" name="postId" value="<%= postId %>" hidden>
                </div>
                <div class="side-buttons">
                    <input type="submit" value="Kaydet" class="purple-button">
                </div>
            </form>
        <% }else{ %>
            <form action="/save" method="post" enctype="multipart/form-data">
                <div class="thepost">
                    <div class="thepost-left">
                        <input type="text" name="title" placeholder="Enter your title here" required id="post-title">
                        <hr class="thepost-seperator">
                        <textarea type="text" name="content" rows="5" placeholder="Type in your content here" required id="post-content"></textarea>
                    </div>
                    <label for="image" class="image-label">Fotoğraf eklemek için tıklayın.</label>
                    <input type="file" name="image" class="image-input" accept=".png, .jpg, .jpeg" id="image">
                </div>
                <div class="side-buttons">
                    <input type="submit" value="Paylaş" class="purple-button">
                </div>
            </form>
        <% } %>
    </div>
</div>
<%- include("partials/footer.ejs") %>